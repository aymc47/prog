{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "gdb debug main.out",
      "type": "cppdbg",
      "request": "launch",

      "program": "${workspaceFolder}/main.out",
      "args": [],

      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,

      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",

      //"preLaunchTask": "make",

      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}